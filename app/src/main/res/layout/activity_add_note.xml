<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.nitikaaggarwal.usernotes.AddNoteActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:text="Add New Note"
        android:textStyle="bold"
        android:textColor="#BF360C"
        android:textSize="24dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Title"
                    android:layout_marginTop="10dp"
                    android:textColor="#4E342E"
                    android:textSize="22dp" />

                <EditText
                    android:id="@+id/title_enetr_et"
                    android:layout_width="match_parent"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:maxLength="35"
                    android:textSize="18sp"
                    android:textColor="#8D6E63"
                    android:background="@android:color/transparent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#8D6E63"
                    android:layout_marginLeft="20sp"
                    android:hint="Enter title here" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Description"
                android:textColor="#4E342E"
                android:textSize="22dp" />

            <EditText
                android:id="@+id/description_enter_et"
                style="@style/MultiLineEditTextStyle"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColor="#8D6E63"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:hint="Enter discription here"
                android:inputType="textMultiLine|textNoSuggestions"
                android:singleLine="false"
                android:textColorHint="#8D6E63"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/save_btn"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/btn_backgroung_orange"
        android:text="SAVE"
        android:textColor="#ffffff"
        android:textSize="18sp" />
</LinearLayout>
